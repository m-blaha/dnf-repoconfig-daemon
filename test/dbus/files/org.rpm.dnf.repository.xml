<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <!--
    -->
    <interface name="org.rpm.dnf.Repository1">
        <!--
        List:
        @id: id of the repository
        @repos: List of the repositories
        -->
        <method name="list">
            <arg type="aa{sv}" name="repos" direction="out"/>
        </method>
        <method name="info">
            <arg type="s" name="id" direction="in"/>
            <arg type="a{sv}" name="repos" direction="out"/>
        </method>
        <method name="enable">
            <arg type="as" name="ids" direction="in"/>
            <arg type="as" name="enabled_ids" direction="out"/>
        </method>
        <method name="disable">
            <arg type="as" name="ids" direction="in"/>
            <arg type="as" name="disabled_ids" direction="out"/>
        </method>
    </interface>
</node>
